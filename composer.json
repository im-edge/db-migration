{
    "name": "imedge/db-migration",
    "description": "DB migration library",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Thomas Gelf",
            "email": "thomas@gelf.net"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "IMEdge\\DbMigration\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IMEdge\\Tests\\DbMigration\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "imedge/pdo": ">=0.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10 | ^2.1",
        "phpunit/phpunit": "^10.3",
        "squizlabs/php_codesniffer": "^3.7 || ^4.0",
        "symplify/easy-coding-standard": "^12.0"
    }
}
